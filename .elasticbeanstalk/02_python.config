container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && python iotd/manage.py migrate --noinput"
    leader_only: true
  02_createsu:
    command: "source /opt/python/run/venv/bin/activate && python snt-api/manage.py createsu"
    leader_only: true

option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "sentad.settings"
    "PYTHONPATH": "/opt/python/current/app/snt-api:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: sentad/wsgi.py
    NumProcesses: 3
    NumThreads: 20
